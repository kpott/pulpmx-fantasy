@model PulpMXFantasy.Web.Models.PredictionsViewModel
@{
    ViewData["Title"] = "Predictions";
}

<div class="container mt-4">
    <h1 class="mb-4">Fantasy Point Predictions</h1>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info" role="alert">
            @ViewBag.Message
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    @if (Model.AllEvents.Any())
    {
        <div class="mb-4">
            <label for="eventSelector" class="form-label"><strong>Select Event:</strong></label>
            <select id="eventSelector" class="form-select" style="max-width: 400px;" onchange="if(this.value) window.location.href=this.value">
                @foreach (var evt in Model.AllEvents)
                {
                    var url = Url.Action("Event", "Predictions", new { eventId = evt.Id });
                    var isSelected = Model.Event?.Id == evt.Id;
                    var statusLabel = evt.IsCompleted ? " (Completed)" :
                                      evt.EventDate < DateTimeOffset.UtcNow ? " (In Progress)" : "";
                    <option value="@url" selected="@isSelected">@evt.Name - @evt.EventDate.ToString("MMM dd, yyyy")@statusLabel</option>
                }
            </select>
        </div>
    }

    @if (Model.Event != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">@Model.Event.Name</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <p class="mb-1"><strong>Date:</strong> @Model.Event.EventDate.ToString("MMMM dd, yyyy")</p>
                        <p class="mb-1"><strong>Series:</strong> @Model.Event.SeriesName (@Model.Event.SeasonYear)</p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        @if (Model.Event.LockoutTime.HasValue)
                        {
                            var isLocked = Model.Event.LockoutTime.Value <= DateTimeOffset.UtcNow;
                            @if (isLocked)
                            {
                                <div class="d-inline-block px-3 py-2 bg-danger text-white rounded">
                                    <strong>Predictions Locked</strong><br>
                                    <small>Locked at <span class="local-time" data-utc="@Model.Event.LockoutTime.Value.UtcDateTime.ToString("o")"></span></small>
                                </div>
                            }
                            else
                            {
                                <div class="d-inline-block px-3 py-2 bg-warning text-dark rounded">
                                    <strong>Picks Lock At</strong><br>
                                    <span class="local-time" data-utc="@Model.Event.LockoutTime.Value.UtcDateTime.ToString("o")"></span>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Predictions.Any())
        {
            @foreach (var classGroup in Model.GetPredictionsByClass())
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="mb-0">@classGroup.Key - Predicted Finish Order</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Rider</th>
                                        <th>Number</th>
                                        <th>Handicap</th>
                                        <th>All-Star</th>
                                        <th>Pred. Finish</th>
                                        <th>Pts if Qual</th>
                                        <th>Expected Pts</th>
                                        <th>Confidence</th>
                                        <th>Range</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var rank = 1;
                                    }
                                    @foreach (var prediction in classGroup)
                                    {
                                        <tr>
                                            <td><strong>@rank</strong></td>
                                            <td>@prediction.RiderName</td>
                                            <td>@prediction.RiderNumber</td>
                                            <td>
                                                @if (prediction.Handicap > 0)
                                                {
                                                    <span class="text-success">+@prediction.Handicap</span>
                                                }
                                                else if (prediction.Handicap < 0)
                                                {
                                                    <span class="text-danger">@prediction.Handicap</span>
                                                }
                                                else
                                                {
                                                    <span>0</span>
                                                }
                                            </td>
                                            <td>
                                                @if (prediction.IsAllStar)
                                                {
                                                    <span class="badge bg-warning text-dark">All-Star</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (prediction.PredictedFinish.HasValue)
                                                {
                                                    <strong>@prediction.PredictedFinish</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">DNQ</span>
                                                }
                                            </td>
                                            <td><strong>@prediction.PointsIfQualifies.ToString("F0")</strong></td>
                                            <td>@prediction.ExpectedPoints.ToString("F1")</td>
                                            <td>
                                                @{
                                                    var confidencePercent = prediction.Confidence * 100;
                                                    var confidenceBadge = confidencePercent >= 70 ? "bg-success" :
                                                                         confidencePercent >= 40 ? "bg-warning text-dark" :
                                                                         "bg-secondary";
                                                }
                                                <span class="badge @confidenceBadge">@confidencePercent.ToString("F0")%</span>
                                            </td>
                                            <td>@prediction.LowerBound.ToString("F1") - @prediction.UpperBound.ToString("F1")</td>
                                        </tr>
                                        rank++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <div class="text-muted small">
                <p>Model version: @Model.Predictions.FirstOrDefault()?.ModelVersion | Generated: @Model.Predictions.FirstOrDefault()?.GeneratedAt.ToString("g")</p>
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">No Predictions Available</h4>
                <p>Predictions have not been generated for this event yet.</p>
                <hr>
                <p class="mb-0">Go to the Admin panel to train models and generate predictions.</p>
            </div>
        }
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.local-time').forEach(function(el) {
                const utc = el.dataset.utc;
                if (!utc) return;

                const date = new Date(utc);
                const format = el.dataset.format;

                if (format === 'time') {
                    el.textContent = date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', second: '2-digit' });
                } else {
                    el.textContent = date.toLocaleString([], { dateStyle: 'short', timeStyle: 'short' });
                }
            });
        });
    </script>
}
