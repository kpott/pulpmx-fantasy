@model PulpMXFantasy.Web.Models.PredictionsViewModel
@{
    ViewData["Title"] = "Predictions";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
}

<h1 class="page-title">Predictions</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (Model.AllEvents.Any())
{
    <div class="event-selector">
        <label for="eventSelector">Event</label>
        <select id="eventSelector" class="form-select" onchange="if(this.value) window.location.href=this.value">
            @foreach (var evt in Model.AllEvents)
            {
                var url = Url.Action("Event", "Predictions", new { eventId = evt.Id });
                var isSelected = Model.Event?.Id == evt.Id;
                var statusLabel = evt.IsCompleted ? " (Completed)" :
                                  evt.EventDate < DateTimeOffset.UtcNow ? " (In Progress)" : "";
                <option value="@url" selected="@isSelected">@evt.Name - @evt.EventDate.ToString("MMM dd, yyyy")@statusLabel</option>
            }
        </select>
    </div>
}

@if (Model.Event != null)
{
    <div class="card event-card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                <div>
                    <p class="section-title mb-2">Event Details</p>
                    <h2 class="event-name mb-0">@Model.Event.Name</h2>
                    <p class="text-muted mt-1 mb-0">
                        @Model.Event.EventDate.ToString("MMMM dd, yyyy") &middot; @Model.Event.SeriesName
                    </p>
                </div>
                <div>
                    @if (Model.Event.LockoutTime.HasValue)
                    {
                        var isLocked = Model.Event.LockoutTime.Value <= DateTimeOffset.UtcNow;
                        @if (isLocked)
                        {
                            <span class="status-badge status-locked">Locked</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">
                                Locks <span class="local-time" data-utc="@Model.Event.LockoutTime.Value.UtcDateTime.ToString("o")"></span>
                            </span>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.Predictions.Any())
    {
        @foreach (var classGroup in Model.GetPredictionsByClass())
        {
            var classLabel = classGroup.Key == "Class450" ? "450" : "250";
            var classStyle = classGroup.Key == "Class450" ? "class-450" : "class-250";

            <div class="card mb-4">
                <div class="card-header">
                    <div class="class-header">
                        <span class="class-badge @classStyle">@classLabel</span>
                        <span class="text-muted" style="font-size: 0.875rem;">Predicted Finish Order</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover predictions-table mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 60px;">#</th>
                                    <th>Rider</th>
                                    <th style="width: 80px;">Number</th>
                                    <th style="width: 90px;">Handicap</th>
                                    <th style="width: 90px;">Type</th>
                                    <th style="width: 80px;">Finish</th>
                                    <th style="width: 90px;">Points</th>
                                    <th style="width: 100px;">Expected</th>
                                    <th style="width: 100px;">Confidence</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var rank = 1;
                                }
                                @foreach (var prediction in classGroup)
                                {
                                    var rankClass = rank <= 3 ? "top-3" : "";
                                    var rowClass = prediction.Ineligible ? "rider-ineligible" : "";
                                    <tr class="@rowClass">
                                        <td>
                                            <span class="prediction-rank @rankClass">@rank</span>
                                        </td>
                                        <td>
                                            <span class="@(prediction.Ineligible ? "rider-name" : "")"><strong>@prediction.RiderName</strong></span>
                                            @if (prediction.Ineligible)
                                            {
                                                var tooltip = !string.IsNullOrEmpty(prediction.IneligibleReason)
                                                    ? prediction.IneligibleReason
                                                    : "Ineligible";
                                                <span class="ineligible-badge ms-2" data-tooltip="@tooltip">Ineligible</span>
                                            }
                                        </td>
                                        <td>@prediction.RiderNumber</td>
                                        <td>
                                            @if (prediction.Handicap > 0)
                                            {
                                                <span class="handicap positive">+@prediction.Handicap</span>
                                            }
                                            else if (prediction.Handicap < 0)
                                            {
                                                <span class="handicap negative">@prediction.Handicap</span>
                                            }
                                            else
                                            {
                                                <span class="handicap zero">0</span>
                                            }
                                        </td>
                                        <td>
                                            @if (prediction.IsAllStar)
                                            {
                                                <span class="allstar-badge">All-Star</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (prediction.PredictedFinish.HasValue)
                                            {
                                                <span class="points-value">@prediction.PredictedFinish</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">DNQ</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="points-value highlight">@prediction.PointsIfQualifies.ToString("F0")</span>
                                        </td>
                                        <td>
                                            <span class="points-value">@prediction.ExpectedPoints.ToString("F1")</span>
                                        </td>
                                        <td>
                                            @{
                                                var confidencePercent = prediction.Confidence * 100;
                                                var confidenceClass = confidencePercent >= 70 ? "high" :
                                                                      confidencePercent >= 40 ? "medium" : "low";
                                            }
                                            <div class="confidence-indicator">
                                                <div class="confidence-bar">
                                                    <div class="confidence-bar-fill @confidenceClass" style="width: @confidencePercent%"></div>
                                                </div>
                                                <span class="confidence-value">@confidencePercent.ToString("F0")%</span>
                                            </div>
                                        </td>
                                    </tr>
                                    rank++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <p class="model-info">
            Model: @Model.Predictions.FirstOrDefault()?.ModelVersion &middot;
            Generated: @Model.Predictions.FirstOrDefault()?.GeneratedAt.ToString("g")
        </p>
    }
    else
    {
        <div class="card">
            <div class="card-body empty-state">
                <svg class="empty-state-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                <h3 class="empty-state-title">No Predictions Available</h3>
                <p class="empty-state-text">Train models in the Admin panel to generate predictions.</p>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary mt-3">Go to Admin</a>
            </div>
        </div>
    }
}

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize DataTables
            $('.predictions-table').DataTable({
                paging: false,
                searching: false,
                info: false,
                order: [[6, 'desc']], // Sort by Points column
                columnDefs: [
                    { orderable: false, targets: [4, 8] }
                ]
            });

            // Local time conversion
            document.querySelectorAll('.local-time').forEach(function(el) {
                const utc = el.dataset.utc;
                if (!utc) return;

                const date = new Date(utc);
                el.textContent = date.toLocaleString([], { dateStyle: 'short', timeStyle: 'short' });
            });
        });
    </script>
}
