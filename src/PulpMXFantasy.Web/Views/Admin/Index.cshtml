@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-4">
    <h1 class="mb-4">Admin Panel</h1>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Data Import -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Import Data</h5>
                </div>
                <div class="card-body">
                    <!-- Sync Next Event -->
                    <form asp-action="SyncNextEvent" method="post" class="mb-3">
                        <button type="submit" class="btn btn-success w-100">
                            Sync Next Event
                        </button>
                        <small class="form-text text-muted">
                            Fetch the upcoming event with rider data and handicaps
                        </small>
                    </form>

                    <hr>

                    <!-- Import Season -->
                    <form asp-action="ImportSeason" method="post" class="mb-3">
                        <label class="form-label fw-bold">Import Season</label>
                        <select class="form-select mb-2" name="season" required>
                            <option value="">-- Select Season --</option>
                            <optgroup label="2025">
                                <option value="2025-supercross">2025 Supercross (17 events)</option>
                                <option value="2025-motocross">2025 Motocross (11 events)</option>
                                <option value="2025-smx">2025 SuperMotocross (3 events)</option>
                            </optgroup>
                            <optgroup label="2024">
                                <option value="2024-supercross">2024 Supercross (17 events)</option>
                                <option value="2024-motocross">2024 Motocross (11 events)</option>
                                <option value="2024-smx">2024 SuperMotocross (3 events)</option>
                            </optgroup>
                        </select>
                        <button type="submit" class="btn btn-primary w-100">
                            Import Season
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- ML Training -->
        <div class="col-md-6 mb-4">
            @{
                var isLocked = ViewBag.IsPredictionsLocked == true;
                var nextEvent = ViewBag.NextEvent as PulpMXFantasy.Contracts.ReadModels.EventReadModel;
                var cardBorder = isLocked ? "border-danger" : "";
                var headerBg = isLocked ? "bg-danger text-white" : "bg-warning text-dark";
                var headerText = isLocked ? "ML Model Training - Locked" : "ML Model Training";
                var iconColor = isLocked ? "text-danger" : "text-warning";
                var btnClass = isLocked ? "btn btn-outline-danger w-100" : "btn btn-warning btn-lg w-100";
            }
            <div class="card h-100 @cardBorder">
                <div class="card-header @headerBg">
                    <h5 class="mb-0">@headerText</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-center text-center">
                    <div class="py-4">
                        @if (isLocked)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="@iconColor mb-3" viewBox="0 0 16 16">
                                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2"/>
                            </svg>
                            <h4 class="@iconColor mb-3">Predictions Locked</h4>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="@iconColor mb-3" viewBox="0 0 16 16">
                                <path d="M6 12.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5M3 8.062C3 6.76 4.235 5.765 5.53 5.886a26.6 26.6 0 0 0 4.94 0C11.765 5.765 13 6.76 13 8.062v1.157a.93.93 0 0 1-.765.935c-.845.147-2.34.346-4.235.346s-3.39-.2-4.235-.346A.93.93 0 0 1 3 9.219zm4.542-.827a.25.25 0 0 0-.217.068l-.92.9a25 25 0 0 1-1.871-.183.25.25 0 0 0-.068.495c.55.076 1.232.149 2.02.193a.25.25 0 0 0 .189-.071l.754-.736.847 1.71a.25.25 0 0 0 .404.062l.932-.97a25 25 0 0 0 1.922-.188.25.25 0 0 0-.068-.495c-.538.074-1.207.145-1.98.189a.25.25 0 0 0-.166.076l-.754.785-.842-1.7a.25.25 0 0 0-.182-.135"/>
                                <path d="M8.5 1.866a1 1 0 1 0-1 0V3h-2A4.5 4.5 0 0 0 1 7.5V8a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1v1a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-1a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1v-.5A4.5 4.5 0 0 0 10.5 3h-2zM14 7.5V13a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V7.5A3.5 3.5 0 0 1 5.5 4h5A3.5 3.5 0 0 1 14 7.5"/>
                            </svg>
                            <h5 class="mb-3">Train Prediction Models</h5>
                        }

                        @if (nextEvent != null)
                        {
                            <p class="mb-2"><strong>@nextEvent.Name</strong></p>
                            @if (nextEvent.LockoutTime.HasValue)
                            {
                                <p class="text-muted mb-3">
                                    @(isLocked ? "Locked at:" : "Locks at:")
                                    <span class="local-time" data-utc="@nextEvent.LockoutTime.Value.UtcDateTime.ToString("o")"></span>
                                </p>
                            }
                            else
                            {
                                <p class="text-muted mb-3">Lockout time not set (sync to update)</p>
                            }
                        }

                        <p class="text-muted mb-4">
                            @if (isLocked)
                            {
                                <text>Model training is disabled to protect existing predictions during the race.</text>
                            }
                            else
                            {
                                <text>Trains 4 LightGBM models (250/450 x Qualification/Finish). Takes 1-5 minutes.</text>
                            }
                        </p>

                        @if (isLocked)
                        {
                            <button type="button" class="@btnClass" disabled>Train Models</button>
                        }
                        else
                        {
                            <form asp-action="TrainModels" method="post">
                                <button type="submit" class="@btnClass">Train Models</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Command Status -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Command Status</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentStatuses != null && ((IEnumerable<dynamic>)ViewBag.RecentStatuses).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>Command</th>
                                        <th>Status</th>
                                        <th>Started</th>
                                        <th>Completed</th>
                                        <th>Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var status in ViewBag.RecentStatuses)
                                    {
                                        <tr>
                                            <td><small>@status.CommandType</small></td>
                                            <td>
                                                @if (status.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">@status.Status</span>
                                                }
                                                else if (status.Status == "Failed")
                                                {
                                                    <span class="badge bg-danger">@status.Status</span>
                                                }
                                                else if (status.Status == "Running")
                                                {
                                                    <span class="badge bg-primary">@status.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@status.Status</span>
                                                }
                                            </td>
                                            <td><small class="local-time" data-utc="@status.StartedAt.UtcDateTime.ToString("o")" data-format="time"></small></td>
                                            <td><small class="local-time" data-utc="@status.CompletedAt?.UtcDateTime.ToString("o")" data-format="time">-</small></td>
                                            <td><small>@status.ProgressMessage</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small mb-0">No recent commands</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
        <a asp-controller="Predictions" asp-action="Index" class="btn btn-outline-primary ms-2">View Predictions</a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.local-time').forEach(function(el) {
                const utc = el.dataset.utc;
                if (!utc) return;

                const date = new Date(utc);
                const format = el.dataset.format;

                if (format === 'time') {
                    el.textContent = date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', second: '2-digit' });
                } else {
                    el.textContent = date.toLocaleString([], { dateStyle: 'short', timeStyle: 'short' });
                }
            });
        });
    </script>
}
