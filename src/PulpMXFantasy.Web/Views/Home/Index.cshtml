@model PulpMXFantasy.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">PulpMX Fantasy Dashboard</h1>

    @if (Model.NextEvent != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Next Event</h3>
            </div>
            <div class="card-body">
                <h4>@Model.NextEvent.Name</h4>
                <p class="mb-1"><strong>Venue:</strong> @Model.NextEvent.Venue</p>
                <p class="mb-1"><strong>Location:</strong> @Model.NextEvent.Location</p>
                <p class="mb-1"><strong>Date:</strong> @Model.NextEvent.EventDate.ToString("MMMM dd, yyyy")</p>
                <p class="mb-1"><strong>Series:</strong> @Model.NextEvent.SeriesName (@Model.NextEvent.SeasonYear)</p>
                @if (Model.NextEvent.LockoutTime.HasValue)
                {
                    var isLocked = Model.NextEvent.LockoutTime.Value <= DateTimeOffset.UtcNow;
                    <p class="mb-3">
                        <strong>Picks Lock:</strong>
                        @if (isLocked)
                        {
                            <span class="badge bg-danger">Locked</span>
                            <span class="text-muted">at <span class="local-time" data-utc="@Model.NextEvent.LockoutTime.Value.UtcDateTime.ToString("o")"></span></span>
                        }
                        else
                        {
                            <span class="local-time" data-utc="@Model.NextEvent.LockoutTime.Value.UtcDateTime.ToString("o")"></span>
                        }
                    </p>
                }
                else
                {
                    <p class="mb-3"><strong>Picks Lock:</strong> <span class="text-muted">Not set</span></p>
                }

                <div class="d-grid gap-2 d-md-flex">
                    <a asp-controller="Predictions" asp-action="Index" class="btn btn-success">
                        View Predictions
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No Upcoming Events</h4>
            <p>There are no upcoming events scheduled at this time.</p>
            <hr>
            <p class="mb-0">Check back later or sync data from PulpMX API in the <a asp-controller="Admin" asp-action="Index" class="alert-link">Admin panel</a>.</p>
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Riders</h5>
                    <p class="display-4">@Model.TotalRiders</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Events</h5>
                    <p class="display-4">@Model.TotalEvents</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-controller="Predictions" asp-action="Index" class="btn btn-primary me-2">
                            View Predictions
                        </a>
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                            Admin Panel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.local-time').forEach(function(el) {
                const utc = el.dataset.utc;
                if (!utc) return;

                const date = new Date(utc);
                const format = el.dataset.format;

                if (format === 'time') {
                    el.textContent = date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', second: '2-digit' });
                } else {
                    el.textContent = date.toLocaleString([], { dateStyle: 'short', timeStyle: 'short' });
                }
            });
        });
    </script>
}
