# PulpMX Fantasy MX - Environment Variables Template
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's in .gitignore

# Database Configuration
# Generate a strong password: openssl rand -base64 32
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=pulpmx_fantasy

# PulpMX API Configuration
# Get your API token from https://pulpmxfantasy.com
PULPMX_API_TOKEN=YOUR_API_TOKEN_HERE

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000

# ML.NET Configuration
MLNET_MODEL_DIRECTORY=./TrainedModels
MLNET_RETRAIN_INTERVAL_HOURS=24
MLNET_MIN_TRAINING_SAMPLES=200
